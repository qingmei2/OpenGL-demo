        </activity>

        <activity android:name=".a_shape.ShapeMainActivity" />
        <activity android:name=".a_shape.ShapeDetailActivity" />

        <activity android:name=".b_animation.AnimMainActivity" />
        <activity android:name=".b_animation.AnimDetailActivity" />

        <activity android:name=".c_image_process.ImageProcessDetailActivity" />
        <activity android:name=".c_image_process.ImageProcessMainActivity" />

        <activity android:name=".d_video.VideoMainActivity" />
        <activity android:name=".d_video.D01VideoPlayerActivity" />
    </application>

</manifest>